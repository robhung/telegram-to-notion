# Telegram API credentials
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Phone number (with country code, e.g., +1234567890)
PHONE_NUMBER=+your_phone_number

# Session name (can be any string)
SESSION_NAME=telegram_session

# Session string (leave empty for first run, will be populated automatically)
TELEGRAM_SESSION=

# Notion API configuration
# Get your integration token from https://www.notion.so/my-integrations
NOTION_TOKEN=your_notion_integration_token_here

# The ID of the Notion database where messages will be added as pages
# You can get this from the database URL: notion.so/workspace/DATABASE_ID
# Or create one using the createMessagesDatabase function
NOTION_DATABASE_ID=your_notion_database_id_here
